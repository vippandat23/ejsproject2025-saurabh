            <input type="text" placeholder="Enter your student name" class="form-control" name="studentName" value="<%= student.studentName %>"/>
          </div>
          <div class="">
            <label class="form-label">Father Name</label>
            <input type="text" placeholder="Enter your fatherName" class="form-control" name="fatherName" value="<%= student.fatherName %>"/>
          </div>
          <div class="">
            <label class="form-label">Mother Name</label>
            <input type="text" placeholder="Enter your motherName" class="form-control" name="motherName" value="<%= student.motherName %>"/>
          </div>
          <div>
            <label class="form-label">Course</label>
            <input type="text" placeholder="Select your course" class="form-control" name="course" value="<%= student.course %>">
