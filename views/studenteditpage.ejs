          <div>
            <label class="form-label">yearOfAddmission</label>
            <input type="text" placeholder="Enter your yearOfAddmission" class="form-control" name="yearOfAddmission" value="<%= student.yearOfAddmission %>"/>
          </div>
          <div>
            <button type="submit" value="Login" class="btn btn-warning w-100 my-3">Edit Student</button>
          </div>
