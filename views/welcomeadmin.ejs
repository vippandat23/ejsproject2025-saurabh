 <div class="container">
    <div class="alert text-center bg-primary my-3" style="color: white">
       <h3> student list </h3> 
    </div>
   </div>
   <div class="container">
    <table class="table text-center">
        <thead>
            <tr>
                <th> Student photo</th>
                <th> Roll No </th>
                <th> Student Name  </th>
                <th> Father Name  </th>
                <th> Mother Name</th>
                <th> Course </th>
                <th> Branch </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student)=>{ %>
             <tr>
                <td> <img src=" <%- student.studentImage %>" width="50px" height="50px"> </img></td>
                <td><%= student.rollNo %></td>
                <td><%= student.studentName %></td>
                <td><%= student.fatherName %></td>
                <td><%= student.motherName %></td>
                <td><%= student.course %></td>
                <td><%= student.branch %></td>
                  <td> 
                    <a href="/edit/student/page/<%=student._id%>" class="btn btn-warning">Edit</a>     <!--  for updation-->
                    <a href="/delete/student/<%=student._id%>" class="btn btn-danger">Delete</a>   <!--delete query delete from where,,,object id uthyega ye -->
                </td>

             </tr>
            <%})%>
        </tbody>
    </table>
   </div>
